<form>
    <input class="" id="js-ProjectId-package" type="hidden" value="" />
    
    <div class="form-group">
        <h6>Add your Packages</h6>
        <input type="number" class="form-control " id="js-ProjectId-Package" placeholder="Enter your Project Id">
        <label for="exampleFormControlInput1">Package 1</label>
        <input type="text" class="form-control" id="Description1" placeholder="Enter your first Package">
        <label for="exampleFormControlInput1">Package Reward</label>
        <input type="number" class="form-control" id="Reward1" placeholder="Enter Reward for Package 1">
        <label for="exampleFormControlInput1">Package 2</label>
        <input type="text" class="form-control" id="Description2" placeholder="Enter your second Package">
        <label for="exampleFormControlInput1">Package Reward</label>
        <input type="number" class="form-control" id="Reward2" placeholder="Enter Reward for Package 2">
        <label for="exampleFormControlInput1">Package 3</label>
        <input type="text" class="form-control" id="Description3" placeholder="Enter your third Package">
        <label for="exampleFormControlInput1">Package Reward</label>
        <input type="number" class="form-control" id="Reward3" placeholder="Enter Reward for Package 3">
        <button type="button" class="btn btn-primary btn-lg btn-block js-submit-package-create">Add your Packages</button>

    </div>
    <div class="alert alert-success " id="success-alert-project" role="alert">
        Packages were created successsfully!
    </div>
    <div class="alert alert-danger" id="danger-alert-project" role="alert">
        Packages could not be created.Try again.
    </div>

</form>