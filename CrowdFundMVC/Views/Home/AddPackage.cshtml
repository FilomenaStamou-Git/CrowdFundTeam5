@model CrowdFundMVC.Models.ProjectOptionModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model == null)
{
    <div class="alert alert-primary" role="alert">
        Project Not Found!
    </div>
    return;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrowdFundMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/_layout.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Merienda+One">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body style="background-color:aliceblue">
    <div class="container-fluid" style="margin:100px 200px 100px 200px; padding: 50px; border-radius: 15px 50px; width:60%;background-color:white">
        <form>
            <input class="" id="js-ProjectId-package" type="hidden" value="" />

            <div class="form-group">
                <h3 class="text-black-50 text-center">Add your Packages</h3>
                <label for="exampleFormControlInput1"><b>Project Id</b></label>
                <input type="number" class="form-control " id="js-ProjectId-Package" value="@Model.project.Id" readonly>
                <label for="exampleFormControlInput1"><b>First Package Description</b></label>
                <input type="text" class="form-control" id="Description1" placeholder="Enter your first Package">
                <label for="exampleFormControlInput1"><b>Reward</b></label>
                <input type="number" class="form-control" id="Reward1" placeholder="Enter Reward for Package 1">
                <label for="exampleFormControlInput1"><b>Second Package Description</b></label>
                <input type="text" class="form-control" id="Description2" placeholder="Enter your second Package">
                <label for="exampleFormControlInput1"><b>Reward</b></label>
                <input type="number" class="form-control" id="Reward2" placeholder="Enter Reward for Package 2">
                <label for="exampleFormControlInput1"><b>Third Package Description</b></label>
                <input type="text" class="form-control" id="Description3" placeholder="Enter your third Package">
                <label for="exampleFormControlInput1"><b>Reward</b></label>
                <input type="number" class="form-control" id="Reward3" placeholder="Enter Reward for Package 3">
                <button type="button" class="btn btn-primary btn-lg btn-block js-submit-package-create">Finish your Project</button>

            </div>
            <div class="alert alert-success " id="success-alert-project" role="alert">
                Packages were created successsfully!
            </div>
            <div class="alert alert-danger" id="danger-alert-project" role="alert">
                Packages could not be created.Try again.
            </div>

        </form>
    </div>
</body>
