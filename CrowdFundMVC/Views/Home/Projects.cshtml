@{
}
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</head>
<body>


    <div class=" container-fluid">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>

            </ol>
            <div class="carousel-inner">
                <div class="carousel-item">
                    <img class="d-block vw-50" src="~/img/slide1.jpg" alt="First slide">
                </div>
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/slide6.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/slide8.jpg" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/slide4.jpeg" alt="Fourth slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        @*  Search Filtering*@
        <div class="container-fluid" style="margin:15px">
            <form class="form shadow bg-white rounded p-3 search-projects-form">
                <div class="row">
                    <div class="col-xl-3">
                        <div class="form-group mx-sm-6 mb-1 d-inline-flex search-projects-icon">
                            <i style="font-size:1.5em;" class="fa fa-sliders" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <div class="row">
                            <label style="font-weight:500;">Title</label>
                            <input type="text" class="form-control handleEnterFilter" id="searchTextFilter" placeholder="Search a Title">
                        </div>
                    </div>


                    <div class="col-xl-3">
                        <div class="row">
                            <div class="form-group mx-sm-3 mb-1 search-projects-cat-input">
                                <label for="exampleFormControlSelect1" style="font-weight:500;">Category</label>
                                <select class="form-control" id="searchControlSelectCategory">
                                    <option> </option>
                                    @foreach (var c in Enum.GetValues(typeof(CrowdFundCore.Models.Category)))
                                    {
                                        var y = (int)c;
                                        <option value="@y">@c</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3">
                        <br />
                        <div class="searchProjectFilter" style="text-align:center;">
                            <button type="button" class="btn btn-outline-info">Search</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
        <div class="container-fluid" style="border-radius:15px">
            <div class="row" style="margin-top: 5%;">
                @{
                    foreach (var project in Model.Projects)
                    {

                        <div class="col-lg-3">
                            <div class="card" style="padding:20px;height:auto;border-radius: 15px 50px;margin-bottom:15px">

                                <img src="~/uploadedimages/@project.Photo" style="height:150px;width:auto" />
                                <p><b>@project.Title</b></p>
                                <div class="row">
                                    <div class="col">
                                        <p><b>Category: </b>@project.Categories</p>
                                        <p><b>Fundings: </b>@project.Fundings</p>
                                    </div>
                                    <div class="col" style="margin:0px 20px">
                                        <br />
                                        <br />

                                        <a href="~/home/projectdetails/@project.Id"><button type="button" class="btn btn-outline-info">Details</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    }
                }
            </div>

        </div>

</body>
