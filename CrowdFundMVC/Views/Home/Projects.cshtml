@model CrowdFundMVC.Models.ProjectModel

<div class="container">
    <div class="text-center">
        <div class="container-fluid">
            <div class="Row-lg">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" style="height: 300px" src="~/img/img1.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height: 300px" src="~/img/img2.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" style="height: 300px" src="~/img/img3.jfif" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



<hr />
        To add a new project press <a href="~/home/AddProject" style="background-color:indigo;width:250px;height:80px;color:white;border-radius:6px">here</a>
<hr />
<div class="row">
    @{
        foreach (var project in Model.Projects)
        {

            <div class="col-md-3">
                    <div class="card" style="padding:20px">

                        <img src="~/uploadedimages/@project.Photo" style="height:150px;width:150px" />
                        <p><b>Title: </b>@project.Title</p>
                        <p><b>Description: </b>@project.Description</p>
                        <p><b>Category: </b>@project.Categories</p>
                        <p><b>Fundings: </b>@project.Fundings</p>
                        @*<p><b>Update: </b>@project.Update</p>
        <p><b>Update: </b>@project.Update</p>*@
                        <a href="~/home/projectdetails/@project.Id"><button type="button" class="btn btn-primary js-project-details">Details</button></a>
                        
                        @*<a href="~/home/updateprojectwithdetails/@project.Id" style="color:white;background-color:royalblue;width:150px;height:40px;border-radius:6px;margin-bottom:20px;text-align:center;padding:5px;position:center">Edit Project</a>
        <a href="~/home/projectdetails/@project.Id" style="color:white;background-color:darkred;width:150px;height:40px;border-radius:6px;text-align:center;padding:5px;position:center">Delete Project</a>*@

                    </div>
            </div>


        }
    }

</div>
