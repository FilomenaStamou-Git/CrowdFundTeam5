<h1> User Management</h1>
<hr />
To add a new user press <a href="~/home/adduser">here</a>
<hr />



<table id="userTable" border="1" cellpadding="10" cellspacing="0">
    <tr>
        <th> Id</th>
        <th> First Name</th>
        <th> Last Name</th>
        <th> Email</th>
        <th> Password</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @{
        foreach (var user in Model.Users)
        {
        <tr>
            <td> @user.Id</td>
            <td> @user.FirstName</td>
            <td> @user.LastName</td>
            <td> @user.Email   </td>
            <td> @user.Password   </td>
            <td> <a href="~/home/updateuserwithdetails/@user.Id"><img src="~/images/update.png" width="25" /></a></td>
            <td> <a href="~/home/DeleteUserFromView/@user.Id"><img src="~/images/delete.png" width="25" /></a></td>
        </tr>

        }
    }


</table>