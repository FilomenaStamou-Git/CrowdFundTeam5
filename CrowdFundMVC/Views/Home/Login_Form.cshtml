    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid" style="margin:100px 200px 100px 200px; padding: 50px; border-radius: 15px 50px; width:60%;background-color:white">
        <form >
            <h2 style="text-align:center">Login</h2>
            <div class="form-group row">
                <label for="exampleInputEmail1" class="col-sm-2 col-form-label"><b>Email</b></label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="userEmail" placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputPassword1" class="col-sm-2 col-form-label"><b>Password</b></label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="userPassword" placeholder="Password">
                </div>
            </div>
            @*<div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <label class="form-check-label"><input type="checkbox"> Remember me</label>
                </div>
            </div>*@
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button id="login-btn" type="submit" class="btn btn-primary" style="color:white;">Login</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>