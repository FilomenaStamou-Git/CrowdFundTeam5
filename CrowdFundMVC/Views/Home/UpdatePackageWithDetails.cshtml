@{
}


<h1> Update Packagecode = @Model.package.Id </h1>

<form>
    <table align="center">
        <tr align="center">
            <td>
                Id
            </td>
            <td> <input type="text" id="Id" value="@Model.package.Id" readonly /></td>
        </tr>

        <tr align="center">
            <td>
                Description
            </td>
            <td>
                <input type="text" id="Description" value="@Model.package.Description" />
            </td>
        </tr>

        <tr align="center">
            <td>
                Reward
            </td>
            <td>
                <input type="text" id="Reward" value="@Model.package.Reward" />

            </td>
        </tr>

        <tr align="center">
            <td>
                Photo
            </td>
            <td>
                <input type="file" id="Picture" value="@Model.package.Photo" />
            </td>
        </tr>

        <tr align="center">
            <td>
                <input type="button" value="Submit data" onclick="updatePackage()" />
            </td>
        </tr>

    </table>
</form>